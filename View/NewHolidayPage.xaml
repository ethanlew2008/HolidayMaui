<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HolidayMaui.NewHolidayPage"
             Title="NewHolidayPage">
    <VerticalStackLayout>
        <Label Text="Flag" FontSize="Header" HorizontalOptions="Center" Padding="0,50,0,50"/>


        <Picker HorizontalOptions="CenterAndExpand"  ItemsSource="{Binding Countries}" WidthRequest="{Binding Width}" HorizontalTextAlignment="Center" SelectedItem="{Binding SelectedCountry}" FontSize="Title"/>


        <DatePicker Date="{Binding SelectedDate}" MinimumDate="{Binding MinimumDate}" HorizontalOptions="CenterAndExpand" FontSize="Title"/>





        <Button x:Name="ConfirmHol" Text="Start" VerticalOptions="End" CornerRadius="50"/>
    </VerticalStackLayout>
</ContentPage>