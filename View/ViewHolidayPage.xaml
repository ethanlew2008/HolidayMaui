<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HolidayMaui.ViewHolidayPage"
             Title="ViewHolidayPage">
    <VerticalStackLayout>

        <ListView x:Name="listView" ItemsSource="{Binding Countries}" ItemSelected="listView_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding}" TextColor="White"/>
                    
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
            
            
            
        


    </VerticalStackLayout>
</ContentPage>