<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HolidayMaui.MainPage">

    <ScrollView>
        <StackLayout>
            <Label Text="{Binding Input}"/>

            <Button Command="{Binding NewHolidayComm}" Text="New Holiday"/>
            <Button Command="{Binding ViewHolidayComm}" Text="View Holiday"/>
            <Button Command="{Binding CurrencyComm}" Text="Currency"/>

        </StackLayout>
    </ScrollView>

</ContentPage>
